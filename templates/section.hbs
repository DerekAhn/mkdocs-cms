<section class="section-view">
  <!-- Nav tabs -->
  <ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active"><a href="#new-section" aria-controls="new-section" role="tab" data-toggle="tab">Create A New Section</a></li>
    <li role="presentation"><a href="#existing-section" aria-controls="existing" role="tab" data-toggle="tab">Add To An Existing One</a></li>
  </ul>

  <!-- Tab panes -->
  <div class="tab-content">

    <div role="tabpanel" class="tab-pane active" id="new-section">
      <form class="form-inline" class="form-inline" action="/section" method="POST">
        <div class="row">
          <div class="form-group col-sm-5">
            <input type="text" class="form-control" name="name" placeholder="Name of the new section">
          </div>
          <div class="col-sm-7">
            <input type="hidden" value="true" name="section" hidden>
            <button type="submit" class="btn btn-default create">Create</button>
          </div>
        </div>
      </form>
    </div>
    
    <div role="tabpanel" class="tab-pane" id="existing-section">
      <form class="form-inline" action="/section" method="POST">
        <div class="row">
          <div class="form-group col-sm-4">
            <select name="path" class="selectpicker" data-width="100%" required>
              <option></option>
              {{#each pages}}
                {{#each this}}
                  <option value="{{formatUrl @key}}">{{@key}}</option>
                {{/each}}
              {{/each}} 
            </select>
          </div>

          <div class="form-group col-sm-4">
            <input type="text" class="form-control" name="name" placeholder="Name of the new section">
          </div>

          <div class="col-sm-4">
            <input type="hidden" value="true" name="section" hidden>
            <button type="submit" class="btn btn-default create">Create</button>
          </div>

        </div>
      </form>
    </div>

  </div>
</section>